@model FMS.Models.UserViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("School Access Rights", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @for (var i = 0; i < Model.UserSchools.Count(); i++)
                {
                    var userSchool = Model.UserSchools[i];

                    @Html.HiddenFor(model => model.UserSchools[i].SchoolId)
                    @Html.CheckBoxFor(model => model.UserSchools[i].IsSelected)
                    @Html.LabelFor(model => model.UserSchools[i].SchoolName, userSchool.SchoolName)
                    <br>
                }
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Role", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @for (var i = 0; i < Model.UserRoles.Count(); i++)
                {
                    var userRole = Model.UserRoles[i];

                    @Html.HiddenFor(model => model.UserRoles[i].RoleId)
                    @Html.CheckBoxFor(model => model.UserRoles[i].IsSelected)
                    @Html.LabelFor(model => model.UserRoles[i].RoleName, userRole.RoleName)
                    <br>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
